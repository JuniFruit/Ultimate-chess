{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2017",  
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "skipLibCheck": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,   
  },
  "typeRoots": [
    "node_modules/@types",
    "custom-types/"
  ],
  "include": [
    "./src/*.ts",
    "custom-types"
  ],
  "exclude": [
    "node_modules",
  ]
}