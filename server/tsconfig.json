{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2017",  
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true, 
    "strict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "skipLibCheck": true,    
  },
  "include": [
    "**/src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}